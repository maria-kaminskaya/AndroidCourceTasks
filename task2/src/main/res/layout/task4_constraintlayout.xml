<?xml version="1.0" encoding="utf-8"?>
<!--Task4 ConstraintLayout-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewAndroid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginL"
        android:text="@string/android"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sizeTextL"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/sizeImageL"
        android:layout_height="@dimen/sizeImageL"
        android:layout_margin="@dimen/marginL"
        android:background="@color/colorGrey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAndroid" />

    <TextView
        android:id="@+id/textViewValuesPosts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/values_posts_125"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sizeTextXS"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/marginM"
        android:text="@string/posts"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sizeTextXS"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textViewValuesPosts"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/textViewValuesFollowers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/values_followers_20k"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sizeTextXS"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewFollowers"
        app:layout_constraintEnd_toEndOf="@+id/textViewFollowers"
        app:layout_constraintStart_toStartOf="@+id/textViewFollowers"
        app:layout_constraintTop_toTopOf="@+id/textViewValuesPosts"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/textViewFollowers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/marginM"
        android:text="@string/followers"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sizeTextXS"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textViewValuesFollowers"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/textViewValuesFollowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/values_following_22"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sizeTextXS"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewFollowing"
        app:layout_constraintEnd_toEndOf="@+id/textViewFollowing"
        app:layout_constraintStart_toStartOf="@+id/textViewFollowing"
        app:layout_constraintTop_toTopOf="@+id/textViewValuesFollowers"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/textViewFollowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/marginM"
        android:text="@string/following"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sizeTextXS"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textViewFollowers"
        app:layout_constraintStart_toEndOf="@+id/textViewFollowers"
        app:layout_constraintTop_toBottomOf="@+id/textViewValuesFollowing"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginL"
        android:text="@string/username"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sizeTextS"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textViewAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginXS"
        android:text="@string/address"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sizeTextS"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewUsername"
        app:layout_constraintTop_toBottomOf="@+id/textViewUsername" />

    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/sizeTextS"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textViewAddress"
        app:layout_constraintTop_toBottomOf="@+id/textViewAddress" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/sizeImageS"
        android:layout_height="@dimen/sizeImageS"
        android:layout_marginTop="@dimen/marginL"
        android:background="@color/colorGrey"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDescription" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="@dimen/sizeImageS"
        android:layout_height="@dimen/sizeImageS"
        android:background="@color/colorGrey"
        app:layout_constraintBottom_toBottomOf="@+id/imageView1"
        app:layout_constraintEnd_toStartOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView1" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/sizeImageS"
        android:layout_height="@dimen/sizeImageS"
        android:background="@color/colorGrey"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="@dimen/sizeImageS"
        android:layout_height="@dimen/sizeImageS"
        android:background="@color/colorGrey"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toStartOf="@+id/imageView5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="@dimen/sizeImageS"
        android:layout_height="@dimen/sizeImageS"
        android:background="@color/colorGrey"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toStartOf="@+id/imageView6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="@dimen/sizeImageS"
        android:layout_height="@dimen/sizeImageS"
        android:background="@color/colorGrey"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/imageViewDirections"
        android:layout_width="@dimen/sizeImage"
        android:layout_height="@dimen/sizeImage"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/marginL"
        android:src="@drawable/directions"
        app:layout_constraintEnd_toEndOf="@+id/textViewDirections"
        app:layout_constraintStart_toStartOf="@+id/textViewDirections"
        app:layout_constraintTop_toBottomOf="@+id/imageView1" />

    <TextView
        android:id="@+id/textViewDirections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/directions"
        android:textAllCaps="true"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/sizeTextS"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textViewCall"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewDirections" />

    <ImageView
        android:id="@+id/imageViewCall"
        android:layout_width="@dimen/sizeImage"
        android:layout_height="@dimen/sizeImage"
        android:layout_gravity="center"
        android:src="@drawable/call"
        app:layout_constraintBottom_toTopOf="@+id/textViewCall"
        app:layout_constraintEnd_toEndOf="@+id/textViewCall"
        app:layout_constraintStart_toEndOf="@+id/imageViewDirections"
        app:layout_constraintStart_toStartOf="@+id/textViewCall" />

    <TextView
        android:id="@+id/textViewCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/call"
        android:textAllCaps="true"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/sizeTextS"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textViewDirections"
        app:layout_constraintEnd_toStartOf="@+id/textViewSave"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textViewDirections" />

    <ImageView
        android:id="@+id/imageViewSave"
        android:layout_width="@dimen/sizeImage"
        android:layout_height="@dimen/sizeImage"
        android:layout_gravity="center"
        android:src="@drawable/save"
        app:layout_constraintBottom_toTopOf="@+id/textViewSave"
        app:layout_constraintEnd_toEndOf="@+id/textViewSave"
        app:layout_constraintStart_toStartOf="@+id/textViewSave" />

    <TextView
        android:id="@+id/textViewSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/save"
        android:textAllCaps="true"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/sizeTextS"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textViewCall"
        app:layout_constraintEnd_toStartOf="@+id/textViewWebsite"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textViewCall" />

    <ImageView
        android:id="@+id/imageViewWebsite"
        android:layout_width="@dimen/sizeImage"
        android:layout_height="@dimen/sizeImage"
        android:layout_gravity="center"
        android:src="@drawable/website"
        app:layout_constraintBottom_toTopOf="@+id/textViewWebsite"
        app:layout_constraintEnd_toEndOf="@+id/textViewWebsite"
        app:layout_constraintStart_toStartOf="@+id/textViewWebsite" />

    <TextView
        android:id="@+id/textViewWebsite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/website"
        android:textAllCaps="true"
        android:textColor="@color/colorBlue"
        android:textSize="@dimen/sizeTextS"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textViewSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textViewSave" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="@dimen/sizeImageM"
        android:layout_height="@dimen/sizeImageM"
        android:background="@color/colorGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDirections" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="@dimen/sizeImageM"
        android:layout_height="@dimen/sizeImageM"
        android:background="@color/colorGrey"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toStartOf="@+id/imageView9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView7" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="@dimen/sizeImageM"
        android:layout_height="@dimen/sizeImageM"
        android:background="@color/colorGrey"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView8" />

</androidx.constraintlayout.widget.ConstraintLayout>