<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kmnvxh222.task6">

    <permission
        android:name="com.kmnvxh222.task6.READ_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".AddContactActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity
            android:name=".EditContactActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"/>

        <provider
            android:authorities="com.kmnvxh222.task6"
            android:name=".provider.ContactContentProvider"
            android:readPermission="com.kmnvxh222.task6.READ_DATABASE"
            android:writePermission="com.kmnvxh222.task6.WRITE_DATABASE"
            android:enabled="true"
            android:exported="true"/>

    </application>



</manifest>